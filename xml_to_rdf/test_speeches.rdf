    <ns1:spokenText xml:lang="el">Ποιες εντυπώσεις; Υποχρεούστε!</ns1:spokenText>
  </rdf:Description>
  <rdf:Description rdf:about="http://purl.org/greeklinkedpolitics/vocabulary/debate_2021-06-15_speech_26">
    <dcterms:date rdf:datatype="http://www.w3.org/2001/XMLSchema#date">2021-06-15</dcterms:date>
