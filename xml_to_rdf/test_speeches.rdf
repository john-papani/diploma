    <ns1:spokenText xml:lang="el">Κυρία συνάδελφε, ολοκληρώστε παρακαλώ.</ns1:spokenText>
  </rdf:Description>
  <rdf:Description rdf:about="http://purl.org/greeklinkedpolitics/vocabulary/debate_2021-06-15_speech_168">
    <dcterms:date rdf:datatype="http://www.w3.org/2001/XMLSchema#date">2021-06-15</dcterms:date>
    <dcterms:language>gr</dcterms:language>
    <dcterms:isPartOf rdf:resource="http://purl.org/greeklinkedpolitics/vocabulary/akn/gr/debate/2021-06-15"/>
    <ns1:hasSubsequent rdf:resource="http://purl.org/greeklinkedpolitics/vocabulary/speech_2021-06-15_debate_169"/>
