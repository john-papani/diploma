  <rdf:Description rdf:about="http://purl.org/greeklinkedpolitics/vocabulary/debate_2021-06-15_speech_92">
    <dcterms:date rdf:datatype="http://www.w3.org/2001/XMLSchema#date">2021-06-15</dcterms:date>
